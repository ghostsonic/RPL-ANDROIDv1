<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <include
        android:id="@+id/toolbarEntrada"
        layout="@layout/toolbar_recepcion"/>

    <EditText
        android:id="@+id/edt_buscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:hint="Buscar cÃ³digo proveedor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero de orden: 345623"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:id="@+id/txtNumeroOrden"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingRight="@dimen/activity_horizontal_margin">
    <ListView
        android:id="@+id/listEntrada"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:listSelector="@drawable/list_selector"
        android:layout_height="200dp"/>
    <EditText
        android:id="@+id/edtIngresarEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingresa_codigo"
        android:layout_below="@+id/listEntrada"
        android:maxLines="1"
        android:inputType="text"
        android:singleLine="true"
        android:layout_marginTop="16dp"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edtIngresarEntrada"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/btnManualEntrada"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:background="@drawable/border_button"
            android:textColor="#FFF"
            android:text="manual"/>
        <EditText
            android:id="@+id/edtCantidadEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/ingresa_cantidad"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
    <ImageButton
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgButtonConfirmar"
        android:src="@drawable/ok_conteo"
        android:background="@null"
        android:layout_alignTop="@+id/imgButtonEnviar"
        android:layout_alignRight="@+id/edtIngresarEntrada"
        android:layout_marginRight="50dp" />
    <ImageButton
        android:id="@+id/imgButtonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/enviar_conteo"
        android:background="@null"
        android:layout_marginLeft="43dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp" />
    </RelativeLayout>
</LinearLayout>
