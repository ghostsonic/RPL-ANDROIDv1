            android:hint="@string/confirma_ubicacion"
            android:layout_below="@+id/listViewUbicacion"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/edtCodigoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtCodigoUbicacion"
            android:hint="@string/confirma_codigo"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <EditText
            android:id="@+id/edtCantidadUbicacion"
            android:layout_width="match_parent"
