<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:id="@+id/lineaApoyo"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/etiqueta_codigo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Código:"
    android:textStyle="bold"
    android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_codigo_salida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0000000"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/etiqueta_codigo"
        android:layout_toEndOf="@+id/etiqueta_codigo"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/etiqueta_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etiqueta_codigo"
        android:text="Descripción:"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_descripcion_salida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jkhdsjkfhjadhjhasdjfhajhgjahfkjgsajdfghsdjgadsfhkj"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/etiqueta_descripcion"
        android:layout_marginRight="100dp"/>

<TextView
    android:textStyle="bold"
    android:id="@+id/etiqueta_autorizado"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cantidad \nAutorizada"
    android:textSize="17sp"
    android:layout_alignParentRight="true"
    android:textAlignment="center"/>
<TextView
    android:id="@+id/tv_autorizada"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0.0"
    android:layout_alignParentRight="true"
    android:layout_marginRight="19dp"
    android:textSize="35sp"
    android:textAlignment="center"
    android:layout_below="@+id/etiqueta_autorizado"
    />
    <TextView
        android:id="@+id/etiqueta_ubica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ubicación: "
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_below="@+id/tv_descripcion_salida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_ubica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0hhjghhhghghghghgjghghghjhjjjjhghgh0"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/etiqueta_ubica"
        android:layout_alignBottom="@+id/etiqueta_ubica"
        android:layout_toRightOf="@+id/etiqueta_ubica"
        android:layout_alignRight="@+id/tv_autorizada"
        android:layout_alignEnd="@+id/tv_autorizada" />
    <TextView
        android:id="@+id/etiqueta_cantidad_apoyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_descripcion_salida"
        android:layout_marginTop="52dp"
        android:text="Cantidad Solicitada:"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/tv_um"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PZ"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_alignTop="@+id/tv_apoyo_salida"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_apoyo_salida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/etiqueta_cantidad_apoyo"
        android:layout_toLeftOf="@+id/tv_um"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/etiqueta_cantidad_apoyo"
        android:layout_toEndOf="@id/etiqueta_cantidad_apoyo" />
</RelativeLayout>