<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="5dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.lachewendy.rpl_androidv1.ConteoCiclicoActivity"
    android:background="@drawable/fondo">
    <ListView
        android:id="@+id/listConteoCiclico"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:listSelector="@drawable/list_selector"
        android:layout_height="300dp"/>
    <EditText
        android:id="@+id/edtIngresarRefaccion"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/ingresa_codigo"
        android:layout_below="@+id/listConteoCiclico"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textSize="25sp"/>
    <ImageView
        android:id="@+id/imgClear"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/delete"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/edtIngresarRefaccion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/edtIngresarRefaccion"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/btnManual"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:background="@drawable/border_button"
            android:textColor="#FFF"
            android:text="manual"/>
        <EditText
            android:id="@+id/edtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/ingresa_cantidad"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgButtonConfirmar"
        android:src="@drawable/ok_conteo"
        android:background="@null"
        android:layout_alignTop="@+id/imgButtonEnviar"
        android:layout_alignRight="@+id/edtIngresarRefaccion"
        android:layout_alignEnd="@+id/edtIngresarRefaccion" />
    <ImageButton
            android:id="@+id/imgButtonEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/enviar_conteo"
            android:background="@null"
            android:layout_marginLeft="43dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp" />
</RelativeLayout>
