<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConfiguracionActivity"
    android:background="@drawable/fondo"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ENDPOINT: "
        android:id="@+id/tvEnd"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/endpointLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:id="@+id/txtEndpoint"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/btnEndpoin"
            android:background="@drawable/ed"/>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/endpointLL"
        android:layout_height="wrap_content"
        android:text="AUTENTICACIÃ“N: "
        android:id="@+id/tvFuncion1"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/autenticacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:id="@+id/txtAut"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/btnAut"
            android:background="@drawable/ed"/>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/endpointLL"
        android:layout_height="wrap_content"
        android:text="CONSULTA CONTEO: "
        android:id="@+id/tvFuncion2"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/consultaConteo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:id="@+id/txtConsultaConteo"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/btnConsulConte"
            android:background="@drawable/ed"/>

    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_below="@id/endpointLL"
        android:layout_height="wrap_content"
        android:text="RESPUESTA CONTEO: "
        android:id="@+id/tvFuncion3"
        android:layout_alignParentTop="true"
        />
    <LinearLayout
        android:id="@+id/respuestaConteo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:id="@+id/txtRespConteo"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/btnRespConteo"
            android:background="@drawable/ed"/>

    </LinearLayout>


</LinearLayout>
