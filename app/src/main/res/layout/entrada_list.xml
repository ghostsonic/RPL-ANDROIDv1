<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearItem"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:layout_height="100dp"
    android:descendantFocusability="blocksDescendants">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chekList"
        android:enabled="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="0"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumeroDePiezas"
        android:textColor="@color/colorPrimaryDark"
        android:text="0"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignBaseline="@+id/txtCodigoyUbicacion"
        android:layout_alignBottom="@+id/txtCodigoyUbicacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtUnidadMedida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:text="dfgfdfg"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/txtCodigoyUbicacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCodigoyUbicacion"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/txtDescripcion"
        android:layout_toRightOf="@+id/chekList"
        android:layout_toEndOf="@+id/chekList" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="UGF5673"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/chekList"
        android:layout_toRightOf="@+id/chekList"
        android:layout_toEndOf="@+id/chekList" />

    <TextView
        android:id="@+id/txtTextoRecolectada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cantidad_recibida"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/txtDescripcion"
        android:layout_toRightOf="@id/chekList"
        android:layout_toEndOf="@id/chekList" />

    <TextView
        android:id="@+id/txtCantidadRecolectada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:textColor="#00ff44"
        android:layout_alignBottom="@+id/txtTextoRecolectada"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>